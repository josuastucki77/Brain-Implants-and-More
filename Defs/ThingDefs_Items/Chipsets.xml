	<ThingDef ParentName="ResourceBase">
    <defName>PrimitiveChipset</defName>
    <label>Primitive Chipset</label>
    <description>A collection of primitive electonic parts repurposed to be interfaced with bodily parts, sometimes the brain. These components are similar to those from the early 2050's, and often have negative side-effects.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Z170</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>1</stackLimit>
	<thingCategories>
      <li>Chipsets</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <MarketValue>578</MarketValue>
      <Mass>0.6</Mass>
      <Flammability>0.4</Flammability>
	  <DeteriorationRate>2.0</DeteriorationRate>
	</statBases>
    <intricate>true</intricate>
    </ThingDef>

